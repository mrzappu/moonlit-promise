    <style>
        .about-container {
            max-width: 1200px;
            margin: 4rem auto;
            padding: 0 2rem;
        }

        .about-hero {
            text-align: center;
            margin-bottom: 4rem;
            position: relative;
        }

        .about-hero h1 {
            font-size: 3.5rem;
            background: linear-gradient(135deg, #fff, #ffd7ff, #c0a0ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
        }

        .about-hero p {
            font-size: 1.2rem;
            color: rgba(255, 255, 255, 0.8);
            max-width: 700px;
            margin: 0 auto;
        }

        .moon-decoration {
            width: 150px;
            height: 150px;
            background: radial-gradient(circle at 30% 30%, #fff, #e0b0ff, #9b59b6);
            border-radius: 50%;
            margin: 2rem auto;
            box-shadow: 0 0 50px rgba(155, 89, 182, 0.5);
            animation: glow 4s infinite;
        }

        @keyframes glow {
            0%, 100% { box-shadow: 0 0 50px rgba(155, 89, 182, 0.5); }
            50% { box-shadow: 0 0 80px rgba(155, 89, 182, 0.8); }
        }

        .story-section {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border-radius: 30px;
            padding: 3rem;
            margin-bottom: 3rem;
            border: 1px solid rgba(155, 89, 182, 0.3);
        }

        .story-section h2 {
            color: #f1c40f;
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }

        .story-section p {
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.8;
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
        }

        .values-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin: 3rem 0;
        }

        .value-card {
            background: rgba(255, 255, 255, 0.03);
            padding: 2rem;
            border-radius: 20px;
            text-align: center;
            border: 1px solid rgba(155, 89, 182, 0.2);
            transition: transform 0.3s ease;
        }

        .value-card:hover {
            transform: translateY(-10px);
            border-color: #9b59b6;
        }

        .value-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .value-card h3 {
            color: #f1c40f;
            margin-bottom: 1rem;
            font-size: 1.3rem;
        }

        .value-card p {
            color: rgba(255, 255, 255, 0.7);
            line-height: 1.6;
        }

        .team-section {
            text-align: center;
            margin: 4rem 0;
        }

        .team-section h2 {
            color: #f1c40f;
            font-size: 2rem;
            margin-bottom: 2rem;
        }

        .team-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
        }

        .team-member {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 20px;
            padding: 2rem;
            border: 1px solid rgba(155, 89, 182, 0.3);
        }

        .member-avatar {
            width: 120px;
            height: 120px;
            background: linear-gradient(135deg, #9b59b6, #8e44ad);
            border-radius: 50%;
            margin: 0 auto 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            border: 3px solid #f1c40f;
        }

        .team-member h3 {
            color: #f1c40f;
            margin-bottom: 0.5rem;
        }

        .team-member p {
            color: rgba(255, 255, 255, 0.7);
        }

        .stats-section {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 2rem;
            margin: 4rem 0;
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: #f1c40f;
        }

        .stat-label {
            color: rgba(255, 255, 255, 0.7);
            font-size: 1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        @media (max-width: 768px) {
            .stats-section {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .about-hero h1 {
                font-size: 2.5rem;
            }
        }

        @media (max-width: 480px) {
            .stats-section {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
