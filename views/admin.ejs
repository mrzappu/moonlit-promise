<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Moonlit Promise</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="magical-particles"></div>
    
    <!-- Navbar -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="logo">
                <img src="/moonlitpromise.png" alt="Moonlit Promise">
            </div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/shop">Shop</a></li>
                <li><a href="/cart">Cart</a></li>
                <li><a href="/history">History</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/terms">Terms</a></li>
                <li><a href="/admin" class="active">Admin</a></li>
            </ul>
            <div class="auth-buttons">
                <div class="user-profile">
                    <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar">
                    <span><%= user.username %></span>
                    <a href="/logout" class="logout-btn">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <main class="admin-container">
        <h1 style="text-align: center; margin-bottom: 2rem;">üîß Admin Dashboard</h1>
        
        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div>Total Users</div>
                <div class="stat-value"><%= stats.totalUsers %></div>
            </div>
            <div class="stat-card">
                <div>Total Orders</div>
                <div class="stat-value"><%= stats.totalOrders %></div>
            </div>
            <div class="stat-card">
                <div>Revenue</div>
                <div class="stat-value"><%= currency %><%= (stats.totalRevenue || 0).toLocaleString('en-IN') %></div>
            </div>
            <div class="stat-card">
                <div>Pending</div>
                <div class="stat-value"><%= stats.pendingOrders %></div>
            </div>
            <div class="stat-card">
                <div>Products</div>
                <div class="stat-value"><%= stats.totalProducts %></div>
            </div>
        </div>
        
        <!-- Tabs -->
        <div class="tabs">
            <button class="tab-btn active" onclick="showTab('orders')">üì¶ Orders</button>
            <button class="tab-btn" onclick="showTab('products')">üõçÔ∏è Products</button>
            <button class="tab-btn" onclick="showTab('users')">üë• Users</button>
            <button class="tab-btn" onclick="showTab('categories')">üìë Categories</button>
            <button class="tab-btn" onclick="showTab('logs')">üìã Logs</button>
        </div>
        
        <!-- Orders Tab -->
        <div id="orders-tab" class="tab-content active">
            <h2>Manage Orders</h2>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Customer</th>
                            <th>Amount</th>
                            <th>Payment</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td><%= order.orderNumber %></td>
                                <td><%= order.fullName %><br><small><%= order.phone %></small></td>
                                <td><%= currency %><%= order.totalAmount.toLocaleString('en-IN') %></td>
                                <td>
                                    <span class="payment-badge <%= order.paymentStatus %>">
                                        <%= order.paymentMethod %> - <%= order.paymentStatus %>
                                    </span>
                                </td>
                                <td>
                                    <span class="status-badge <%= order.orderStatus %>">
                                        <%= order.orderStatus %>
                                    </span>
                                </td>
                                <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                                <td>
                                    <button onclick="updateOrder('<%= order.id %>', '<%= order.orderNumber %>', '<%= order.orderStatus %>', '<%= order.paymentStatus %>')" class="btn btn-warning">Update</button>
                                    <a href="/track/<%= order.orderNumber %>" target="_blank" class="btn btn-primary">Track</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Products Tab -->
        <div id="products-tab" class="tab-content">
            <div class="tab-header">
                <h2>Manage Products</h2>
                <a href="/admin/product/new" class="btn btn-primary">+ Add New Product</a>
            </div>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Stock</th>
                            <th>Sold</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product => { %>
                            <tr>
                                <td><%= product.id %></td>
                                <td>
                                    <% if (product.image) { %>
                                        <img src="/uploads/<%= product.image %>" class="product-thumb">
                                    <% } else { %>
                                        <span class="product-placeholder">üì∑</span>
                                    <% } %>
                                </td>
                                <td><%= product.name %></td>
                                <td><%= currency %><%= product.price.toLocaleString('en-IN') %></td>
                                <td><%= product.category %></td>
                                <td><%= product.stock %></td>
                                <td><%= product.soldCount || 0 %></td>
                                <td>
                                    <a href="/admin/product/edit/<%= product.id %>" class="btn btn-warning">Edit</a>
                                    <form action="/admin/product/delete/<%= product.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete this product?')">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Users Tab -->
        <div id="users-tab" class="tab-content">
            <h2>Users</h2>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Verified</th>
                            <th>Orders</th>
                            <th>Joined</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.id.substring(0, 8) %>...</td>
                                <td><%= user.username %></td>
                                <td><%= user.fullName || 'N/A' %></td>
                                <td><%= user.phone || 'N/A' %></td>
                                <td>
                                    <% if (user.isPhoneVerified) { %>
                                        <span class="verified">‚úÖ Verified</span>
                                    <% } else { %>
                                        <span class="not-verified">‚ùå Not Verified</span>
                                    <% } %>
                                </td>
                                <td><%= user.totalOrders || 0 %></td>
                                <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Categories Tab -->
        <div id="categories-tab" class="tab-content">
            <h2>Categories</h2>
            <div class="add-category-form">
                <form action="/admin/category/add" method="POST">
                    <input type="text" name="name" placeholder="Category Name" required>
                    <input type="text" name="slug" placeholder="Slug" required>
                    <input type="text" name="icon" placeholder="Icon (emoji)" required>
                    <button type="submit" class="btn btn-success">Add Category</button>
                </form>
            </div>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Icon</th>
                            <th>Name</th>
                            <th>Slug</th>
                            <th>Order</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(cat => { %>
                            <tr>
                                <td><%= cat.id %></td>
                                <td style="font-size: 2rem;"><%= cat.icon %></td>
                                <td><%= cat.name %></td>
                                <td><%= cat.slug %></td>
                                <td><%= cat.displayOrder %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Logs Tab -->
        <div id="logs-tab" class="tab-content">
            <h2>System Logs</h2>
            <div class="logs-grid">
                <div class="log-section">
                    <h3>Login Logs</h3>
                    <div class="log-container">
                        <% if (recentLogs.login && recentLogs.login.length > 0) { %>
                            <% recentLogs.login.forEach(log => { %>
                                <div class="log-line"><%= log %></div>
                            <% }) %>
                        <% } else { %>
                            <div class="log-line">No login logs found</div>
                        <% } %>
                    </div>
                </div>
                <div class="log-section">
                    <h3>Order Logs</h3>
                    <div class="log-container">
                        <% if (recentLogs.orders && recentLogs.orders.length > 0) { %>
                            <% recentLogs.orders.forEach(log => { %>
                                <div class="log-line"><%= log %></div>
                            <% }) %>
                        <% } else { %>
                            <div class="log-line">No order logs found</div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Order Update Modal -->
    <div id="orderModal" class="modal">
        <div class="modal-content">
            <h2>Update Order <span id="modalOrderNumber"></span></h2>
            <form id="orderUpdateForm" method="POST">
                <div class="form-group">
                    <label>Order Status</label>
                    <select name="orderStatus" id="orderStatus">
                        <option value="pending">Pending</option>
                        <option value="processing">Processing</option>
                        <option value="shipped">Shipped</option>
                        <option value="out_for_delivery">Out for Delivery</option>
                        <option value="delivered">Delivered</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Payment Status</label>
                    <select name="paymentStatus" id="paymentStatus">
                        <option value="pending">Pending</option>
                        <option value="completed">Completed</option>
                        <option value="failed">Failed</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Tracking ID</label>
                    <input type="text" name="trackingId" id="trackingId">
                </div>
                <div class="form-group">
                    <label>Courier</label>
                    <input type="text" name="courier" id="courier">
                </div>
                <div class="form-group">
                    <label>Notes</label>
                    <textarea name="notes" id="notes" rows="3"></textarea>
                </div>
                <div class="modal-actions">
                    <button type="submit" class="btn btn-success">Update</button>
                    <button type="button" onclick="closeModal()" class="btn btn-danger">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <style>
        .admin-container {
            max-width: 1400px;
            margin: 2rem auto;
            padding: 0 2rem;
        }
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        .stat-card {
            background: rgba(255,255,255,0.05);
            border-radius: 15px;
            padding: 1.5rem;
            border: 1px solid rgba(155,89,182,0.3);
        }
        .stat-value {
            font-size: 2.5rem;
            font-weight: bold;
            color: #f1c40f;
        }
        .tabs {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 2rem;
            border-bottom: 1px solid rgba(155,89,182,0.3);
            padding-bottom: 1rem;
            flex-wrap: wrap;
        }
        .tab-btn {
            background: none;
            border: none;
            color: white;
            padding: 0.8rem 1.5rem;
            cursor: pointer;
            border-radius: 30px;
            transition: all 0.3s;
        }
        .tab-btn:hover { background: rgba(155,89,182,0.2); }
        .tab-btn.active { background: #9b59b6; color: white; }
        .tab-content { display: none; }
        .tab-content.active { display: block; }
        .table-container { overflow-x: auto; }
        table {
            width: 100%;
            border-collapse: collapse;
            background: rgba(255,255,255,0.02);
            border-radius: 15px;
            overflow: hidden;
        }
        th {
            background: rgba(155,89,182,0.2);
            padding: 1rem;
            text-align: left;
            color: #f1c40f;
        }
        td { padding: 1rem; border-bottom: 1px solid rgba(155,89,182,0.2); }
        .log-container {
            background: rgba(0,0,0,0.3);
            border-radius: 10px;
            padding: 1rem;
            max-height: 400px;
            overflow-y: auto;
            font-family: monospace;
            font-size: 0.9rem;
        }
        .log-line { padding: 0.3rem 0; border-bottom: 1px solid rgba(255,255,255,0.05); }
        .btn {
            padding: 0.4rem 1rem;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            font-size: 0.9rem;
            margin: 0.2rem;
            text-decoration: none;
            display: inline-block;
        }
        .btn-primary { background: #9b59b6; color: white; }
        .btn-success { background: rgba(46,204,113,0.2); color: #2ecc71; border: 1px solid #2ecc71; }
        .btn-danger { background: rgba(231,76,60,0.2); color: #e74c3c; border: 1px solid #e74c3c; }
        .btn-warning { background: rgba(241,196,15,0.2); color: #f1c40f; border: 1px solid #f1c40f; }
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.8);
            z-index: 10000;
            align-items: center;
            justify-content: center;
        }
        .modal.active { display: flex; }
        .modal-content {
            background: linear-gradient(135deg, #1a1a3a, #2a1a4a);
            padding: 2rem;
            border-radius: 20px;
            max-width: 500px;
            width: 90%;
            border: 2px solid #9b59b6;
        }
        .form-group { margin-bottom: 1rem; }
        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #f1c40f;
        }
        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 0.8rem;
            background: rgba(255,255,255,0.1);
            border: 1px solid #9b59b6;
            border-radius: 10px;
            color: white;
        }
        .product-thumb { width: 50px; height: 50px; object-fit: cover; border-radius: 5px; }
        .tab-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }
        .add-category-form {
            margin-bottom: 2rem;
        }
        .add-category-form form {
            display: flex;
            gap: 1rem;
            align-items: flex-end;
        }
        .add-category-form input {
            flex: 1;
            padding: 0.8rem;
            background: rgba(255,255,255,0.1);
            border: 1px solid #9b59b6;
            border-radius: 10px;
            color: white;
        }
        .logs-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }
        .payment-badge, .status-badge {
            padding: 0.2rem 0.5rem;
            border-radius: 5px;
            font-size: 0.9rem;
        }
        .payment-badge.completed { background: rgba(46,204,113,0.2); color: #2ecc71; }
        .payment-badge.pending { background: rgba(241,196,15,0.2); color: #f1c40f; }
        .status-badge.delivered { background: rgba(46,204,113,0.2); color: #2ecc71; }
        .status-badge.cancelled { background: rgba(231,76,60,0.2); color: #e74c3c; }
        .status-badge.pending { background: rgba(241,196,15,0.2); color: #f1c40f; }
        .status-badge.shipped { background: rgba(52,152,219,0.2); color: #3498db; }
        .verified { color: #2ecc71; }
        .not-verified { color: #e74c3c; }
        .modal-actions {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }
        .modal-actions button {
            flex: 1;
            padding: 1rem;
        }
    </style>

    <script>
        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(el => el.classList.remove('active'));
            document.getElementById(tabName + '-tab').classList.add('active');
            event.target.classList.add('active');
        }
        
        function updateOrder(orderId, orderNumber, currentStatus, paymentStatus) {
            document.getElementById('orderModal').classList.add('active');
            document.getElementById('modalOrderNumber').textContent = orderNumber;
            document.getElementById('orderUpdateForm').action = `/admin/order/update/${orderId}`;
            document.getElementById('orderStatus').value = currentStatus;
            document.getElementById('paymentStatus').value = paymentStatus;
        }
        
        function closeModal() {
            document.getElementById('orderModal').classList.remove('active');
        }
        
        window.onclick = function(event) {
            const modal = document.getElementById('orderModal');
            if (event.target === modal) closeModal();
        }
    </script>
</body>
</html>
