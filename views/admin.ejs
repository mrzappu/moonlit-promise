<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Moonlit Promise</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="magical-particles"></div>
    
    <nav class="navbar">
        <div class="nav-container">
            <div class="logo">
                <img src="/moonlitpromise.png" alt="Moonlit Promise" class="logo-image">
                <div class="moon-glow"></div>
            </div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/shop">Shop</a></li>
                <li><a href="/cart">Cart</a></li>
                <li><a href="/history">History</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/terms">Terms</a></li>
                <li><a href="/admin" class="active">Admin</a></li>
            </ul>
            <div class="auth-buttons">
                <div class="user-profile">
                    <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar">
                    <span><%= user.username %></span>
                    <a href="/logout" class="logout-btn">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <main>
        <div class="admin-container" style="max-width: 1400px; margin: 4rem auto; padding: 0 2rem;">
            <h1 style="text-align: center; margin-bottom: 2rem;">Admin Dashboard</h1>
            
            <!-- Stats -->
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; margin-bottom: 3rem;">
                <div style="background: rgba(255,255,255,0.05); backdrop-filter: blur(10px); border-radius: 20px; padding: 2rem; text-align: center; border: 1px solid rgba(155,89,182,0.3);">
                    <h3 style="color: #ffd7ff; margin-bottom: 1rem;">Total Users</h3>
                    <p style="font-size: 2.5rem; font-weight: 700; color: #f1c40f;"><%= users.length %></p>
                </div>
                <div style="background: rgba(255,255,255,0.05); backdrop-filter: blur(10px); border-radius: 20px; padding: 2rem; text-align: center; border: 1px solid rgba(155,89,182,0.3);">
                    <h3 style="color: #ffd7ff; margin-bottom: 1rem;">Pending Orders</h3>
                    <p style="font-size: 2.5rem; font-weight: 700; color: #f1c40f;"><%= orders.filter(o => o.status === 'pending').length %></p>
                </div>
                <div style="background: rgba(255,255,255,0.05); backdrop-filter: blur(10px); border-radius: 20px; padding: 2rem; text-align: center; border: 1px solid rgba(155,89,182,0.3);">
                    <h3 style="color: #ffd7ff; margin-bottom: 1rem;">COD Orders</h3>
                    <p style="font-size: 2.5rem; font-weight: 700; color: #f1c40f;"><%= orders.filter(o => o.paymentMethod === 'cod').length %></p>
                </div>
                <div style="background: rgba(255,255,255,0.05); backdrop-filter: blur(10px); border-radius: 20px; padding: 2rem; text-align: center; border: 1px solid rgba(155,89,182,0.3);">
                    <h3 style="color: #ffd7ff; margin-bottom: 1rem;">Total Products</h3>
                    <p style="font-size: 2.5rem; font-weight: 700; color: #f1c40f;"><%= products.length %></p>
                </div>
            </div>

            <!-- Tabs -->
            <div style="display: flex; gap: 1rem; margin-bottom: 2rem; border-bottom: 1px solid rgba(155,89,182,0.3); padding-bottom: 1rem;">
                <button class="tab-btn active" onclick="showTab('orders')" style="background: none; border: none; color: white; padding: 0.5rem 1rem; cursor: pointer; border-bottom: 2px solid #9b59b6;">Orders</button>
                <button class="tab-btn" onclick="showTab('products')" style="background: none; border: none; color: white; padding: 0.5rem 1rem; cursor: pointer;">Products</button>
                <button class="tab-btn" onclick="showTab('users')" style="background: none; border: none; color: white; padding: 0.5rem 1rem; cursor: pointer;">Users</button>
                <button class="tab-btn" onclick="showTab('categories')" style="background: none; border: none; color: white; padding: 0.5rem 1rem; cursor: pointer;">Categories</button>
            </div>

            <!-- Orders Tab -->
            <div id="orders-tab" class="tab-content active">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
                    <h2>All Orders</h2>
                    <select onchange="filterOrders(this.value)" style="background: rgba(255,255,255,0.1); color: white; padding: 0.5rem; border-radius: 5px; border: 1px solid rgba(155,89,182,0.3);">
                        <option value="all">All Orders</option>
                        <option value="pending">Pending</option>
                        <option value="approved">Approved</option>
                        <option value="rejected">Rejected</option>
                        <option value="cod">COD Only</option>
                        <option value="online">Online Only</option>
                    </select>
                </div>
                
                <div style="overflow-x: auto;">
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background: rgba(155,89,182,0.1);">
                                <th style="padding: 1rem; text-align: left;">Order ID</th>
                                <th style="padding: 1rem; text-align: left;">User</th>
                                <th style="padding: 1rem; text-align: left;">Product</th>
                                <th style="padding: 1rem; text-align: left;">Price</th>
                                <th style="padding: 1rem; text-align: left;">Payment</th>
                                <th style="padding: 1rem; text-align: left;">Status</th>
                                <th style="padding: 1rem; text-align: left;">Proof</th>
                                <th style="padding: 1rem; text-align: left;">Shipping</th>
                                <th style="padding: 1rem; text-align: left;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(order => { %>
                                <tr style="border-bottom: 1px solid rgba(155,89,182,0.3);">
                                    <td style="padding: 1rem;">#<%= order.id %></td>
                                    <td style="padding: 1rem;"><%= order.username %></td>
                                    <td style="padding: 1rem;"><%= order.productName %></td>
                                    <td style="padding: 1rem;"><%= currency %><%= order.price %></td>
                                    <td style="padding: 1rem;">
                                        <span style="padding: 0.2rem 0.5rem; border-radius: 5px; <% if (order.paymentMethod === 'cod') { %>background: rgba(241,196,15,0.2); color: #f1c40f;<% } else { %>background: rgba(155,89,182,0.2); color: #9b59b6;<% } %>">
                                            <%= order.paymentMethod || 'online' %>
                                        </span>
                                    </td>
                                    <td style="padding: 1rem;">
                                        <span style="padding: 0.2rem 0.5rem; border-radius: 5px; 
                                            <% if (order.status === 'pending') { %>background: rgba(241,196,15,0.2); color: #f1c40f;<% } %>
                                            <% if (order.status === 'approved') { %>background: rgba(46,204,113,0.2); color: #2ecc71;<% } %>
                                            <% if (order.status === 'rejected') { %>background: rgba(231,76,60,0.2); color: #e74c3c;<% } %>">
                                            <%= order.status %>
                                        </span>
                                    </td>
                                    <td style="padding: 1rem;">
                                        <% if (order.proof) { %>
                                            <a href="/uploads/<%= order.proof %>" target="_blank" style="color: #f1c40f;">View</a>
                                        <% } else { %>
                                            <span style="color: rgba(255,255,255,0.3);">N/A</span>
                                        <% } %>
                                    </td>
                                    <td style="padding: 1rem; font-size: 0.9rem;">
                                        <div><%= order.fullName %></div>
                                        <div><%= order.phone %></div>
                                        <div><%= order.address %>, <%= order.pincode %></div>
                                    </td>
                                    <td style="padding: 1rem;">
                                        <% if (order.status === 'pending') { %>
                                            <form action="/admin/order/approve/<%= order.id %>" method="POST" style="display: inline;">
                                                <button type="submit" style="background: rgba(46,204,113,0.2); color: #2ecc71; border: 1px solid #2ecc71; padding: 0.3rem 0.8rem; border-radius: 5px; cursor: pointer; margin-right: 0.3rem;">‚úì</button>
                                            </form>
                                            <form action="/admin/order/reject/<%= order.id %>" method="POST" style="display: inline;">
                                                <button type="submit" style="background: rgba(231,76,60,0.2); color: #e74c3c; border: 1px solid #e74c3c; padding: 0.3rem 0.8rem; border-radius: 5px; cursor: pointer;">‚úó</button>
                                            </form>
                                        <% } %>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Products Tab -->
            <div id="products-tab" class="tab-content" style="display: none;">
                <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
                    <h2>Products</h2>
                    <a href="/admin/product/new" class="btn primary">+ Add New Product</a>
                </div>
                
                <div style="overflow-x: auto;">
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background: rgba(155,89,182,0.1);">
                                <th style="padding: 1rem;">ID</th>
                                <th style="padding: 1rem;">Image</th>
                                <th style="padding: 1rem;">Name</th>
                                <th style="padding: 1rem;">Price</th>
                                <th style="padding: 1rem;">Category</th>
                                <th style="padding: 1rem;">Type</th>
                                <th style="padding: 1rem;">Stock</th>
                                <th style="padding: 1rem;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product => { %>
                                <tr style="border-bottom: 1px solid rgba(155,89,182,0.3);">
                                    <td style="padding: 1rem;"><%= product.id %></td>
                                    <td style="padding: 1rem;">
                                        <% if (product.image) { %>
                                            <img src="/uploads/<%= product.image %>" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;">
                                        <% } else { %>
                                            <span>üì∑</span>
                                        <% } %>
                                    </td>
                                    <td style="padding: 1rem;"><%= product.name %></td>
                                    <td style="padding: 1rem;"><%= currency %><%= product.price %></td>
                                    <td style="padding: 1rem;"><%= product.category_slug || 'N/A' %></td>
                                    <td style="padding: 1rem;">
                                        <% if (product.sport_type) { %>Sports<% } %>
                                        <% if (product.dress_type) { %>Dress<% } %>
                                    </td>
                                    <td style="padding: 1rem;"><%= product.stock %></td>
                                    <td style="padding: 1rem;">
                                        <a href="/admin/product/edit/<%= product.id %>" style="color: #f1c40f; margin-right: 0.5rem;">Edit</a>
                                        <form action="/admin/product/delete/<%= product.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Delete this product?')">
                                            <button type="submit" style="background: none; border: none; color: #e74c3c; cursor: pointer;">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Users Tab -->
            <div id="users-tab" class="tab-content" style="display: none;">
                <h2 style="margin-bottom: 2rem;">Users</h2>
                <div style="overflow-x: auto;">
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background: rgba(155,89,182,0.1);">
                                <th style="padding: 1rem;">Discord ID</th>
                                <th style="padding: 1rem;">Username</th>
                                <th style="padding: 1rem;">Avatar</th>
                                <th style="padding: 1rem;">Phone</th>
                                <th style="padding: 1rem;">Verified</th>
                                <th style="padding: 1rem;">Joined</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(user => { %>
                                <tr style="border-bottom: 1px solid rgba(155,89,182,0.3);">
                                    <td style="padding: 1rem;"><%= user.id %></td>
                                    <td style="padding: 1rem;"><%= user.username %></td>
                                    <td style="padding: 1rem;">
                                        <% if (user.avatar) { %>
                                            <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" style="width: 30px; height: 30px; border-radius: 50%;">
                                        <% } %>
                                    </td>
                                    <td style="padding: 1rem;"><%= user.phone || 'N/A' %></td>
                                    <td style="padding: 1rem;">
                                        <% if (user.isPhoneVerified) { %>
                                            <span style="color: #2ecc71;">‚úÖ</span>
                                        <% } else { %>
                                            <span style="color: #e74c3c;">‚ùå</span>
                                        <% } %>
                                    </td>
                                    <td style="padding: 1rem;"><%= new Date(user.createdAt).toLocaleDateString() %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Categories Tab -->
            <div id="categories-tab" class="tab-content" style="display: none;">
                <h2 style="margin-bottom: 2rem;">Categories</h2>
                <div style="overflow-x: auto;">
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background: rgba(155,89,182,0.1);">
                                <th style="padding: 1rem;">ID</th>
                                <th style="padding: 1rem;">Name</th>
                                <th style="padding: 1rem;">Slug</th>
                                <th style="padding: 1rem;">Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categories.forEach(cat => { %>
                                <tr style="border-bottom: 1px solid rgba(155,89,182,0.3);">
                                    <td style="padding: 1rem;"><%= cat.id %></td>
                                    <td style="padding: 1rem;"><%= cat.name %></td>
                                    <td style="padding: 1rem;"><%= cat.slug %></td>
                                    <td style="padding: 1rem;"><%= cat.type %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>

    <footer>
        <div class="footer-content">
            <p>Dev Rick ‚Ä¢ Moonlit Promise</p>
            <p>‚ú® Where every purchase is a promise under the stars ‚ú®</p>
        </div>
    </footer>

    <script>
        function showTab(tab) {
            document.querySelectorAll('.tab-content').forEach(el => el.style.display = 'none');
            document.getElementById(tab + '-tab').style.display = 'block';
            
            document.querySelectorAll('.tab-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
        }
        
        function filterOrders(filter) {
            // This would require a page reload or AJAX
            // For simplicity, we'll reload with query param
            if (filter !== 'all') {
                window.location.href = '/admin?filter=' + filter;
            } else {
                window.location.href = '/admin';
            }
        }
    </script>
</body>
</html>
