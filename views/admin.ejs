<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Moonlit Promise</title>
    <link rel="stylesheet" href="/style.css">
    <style>
        .admin-container {
            max-width: 1400px;
            margin: 2rem auto;
            padding: 0 2rem;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .stat-card {
            background: rgba(255,255,255,0.05);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 1.5rem;
            border: 1px solid rgba(155,89,182,0.3);
        }
        
        .stat-value {
            font-size: 2rem;
            font-weight: bold;
            color: #f1c40f;
        }
        
        .tabs {
            display: flex;
            gap: 0.5rem;
            margin-bottom: 2rem;
            border-bottom: 1px solid rgba(155,89,182,0.3);
            padding-bottom: 1rem;
            flex-wrap: wrap;
        }
        
        .tab-btn {
            background: none;
            border: none;
            color: white;
            padding: 0.8rem 1.5rem;
            cursor: pointer;
            border-radius: 30px;
            transition: all 0.3s;
        }
        
        .tab-btn:hover {
            background: rgba(155,89,182,0.2);
        }
        
        .tab-btn.active {
            background: #9b59b6;
            color: white;
        }
        
        .tab-content {
            display: none;
        }
        
        .tab-content.active {
            display: block;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            background: rgba(255,255,255,0.02);
            border-radius: 15px;
            overflow: hidden;
        }
        
        th {
            background: rgba(155,89,182,0.2);
            padding: 1rem;
            text-align: left;
            font-weight: 600;
        }
        
        td {
            padding: 1rem;
            border-bottom: 1px solid rgba(155,89,182,0.2);
        }
        
        .log-container {
            background: rgba(0,0,0,0.3);
            border-radius: 10px;
            padding: 1rem;
            max-height: 400px;
            overflow-y: auto;
            font-family: monospace;
            font-size: 0.9rem;
        }
        
        .log-line {
            padding: 0.3rem 0;
            border-bottom: 1px solid rgba(255,255,255,0.05);
            color: rgba(255,255,255,0.8);
        }
        
        .log-time {
            color: #f1c40f;
            margin-right: 1rem;
        }
        
        .action-buttons form {
            display: inline;
        }
        
        .btn-small {
            padding: 0.3rem 0.8rem;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            font-size: 0.9rem;
        }
        
        .btn-approve {
            background: rgba(46,204,113,0.2);
            color: #2ecc71;
            border: 1px solid #2ecc71;
        }
        
        .btn-reject {
            background: rgba(231,76,60,0.2);
            color: #e74c3c;
            border: 1px solid #e74c3c;
        }
    </style>
</head>
<body>
    <div class="magical-particles"></div>
    
    <nav class="navbar">
        <div class="nav-container">
            <div class="logo">
                <img src="/moonlitpromise.png" alt="Moonlit Promise">
            </div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/shop">Shop</a></li>
                <li><a href="/cart">Cart</a></li>
                <li><a href="/history">History</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/terms">Terms</a></li>
                <li><a href="/admin" class="active">Admin</a></li>
            </ul>
            <div class="auth-buttons">
                <div class="user-profile">
                    <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar">
                    <span><%= user.username %></span>
                    <a href="/logout" class="logout-btn">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <main class="admin-container">
        <h1 style="text-align: center; margin-bottom: 2rem;">üîß Admin Dashboard</h1>
        
        <!-- Stats -->
        <div class="stats-grid">
            <div class="stat-card">
                <div>Total Users</div>
                <div class="stat-value"><%= stats.totalUsers %></div>
            </div>
            <div class="stat-card">
                <div>Total Orders</div>
                <div class="stat-value"><%= stats.totalOrders %></div>
            </div>
            <div class="stat-card">
                <div>Revenue</div>
                <div class="stat-value"><%= currency %><%= stats.totalRevenue.toLocaleString('en-IN') %></div>
            </div>
            <div class="stat-card">
                <div>Pending</div>
                <div class="stat-value"><%= stats.pendingOrders %></div>
            </div>
            <div class="stat-card">
                <div>COD Orders</div>
                <div class="stat-value"><%= stats.codOrders %></div>
            </div>
        </div>
        
        <!-- Tabs -->
        <div class="tabs">
            <button class="tab-btn active" onclick="showTab('orders')">Orders</button>
            <button class="tab-btn" onclick="showTab('products')">Products</button>
            <button class="tab-btn" onclick="showTab('users')">Users</button>
            <button class="tab-btn" onclick="showTab('login-logs')">Login Logs</button>
            <button class="tab-btn" onclick="showTab('order-logs')">Order Logs</button>
            <button class="tab-btn" onclick="showTab('payment-logs')">Payment Logs</button>
            <button class="tab-btn" onclick="showTab('delivery-logs')">Delivery Logs</button>
        </div>
        
        <!-- Orders Tab -->
        <div id="orders-tab" class="tab-content active">
            <h2>üì¶ Manage Orders</h2>
            <div style="overflow-x: auto;">
                <table>
                    <thead>
                        <tr>
                            <th>Order #</th>
                            <th>Customer</th>
                            <th>Amount</th>
                            <th>Payment</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                            <tr>
                                <td><%= order.orderNumber %></td>
                                <td><%= order.fullName %><br><small><%= order.phone %></small></td>
                                <td><%= currency %><%= order.totalAmount %></td>
                                <td>
                                    <%= order.paymentMethod.toUpperCase() %><br>
                                    <span style="font-size:0.8rem; color: <%= order.paymentStatus === 'completed' ? '#2ecc71' : '#f1c40f' %>">
                                        <%= order.paymentStatus %>
                                    </span>
                                </td>
                                <td>
                                    <span class="status-badge status-<%= order.orderStatus %>">
                                        <%= order.orderStatus %>
                                    </span>
                                </td>
                                <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
                                <td class="action-buttons">
                                    <button onclick="showOrderModal('<%= order.id %>', '<%= order.orderNumber %>', '<%= order.orderStatus %>', '<%= order.paymentStatus %>')" class="btn-small">Update</button>
                                    <a href="/track/<%= order.orderNumber %>" target="_blank" class="btn-small">Track</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Login Logs Tab -->
        <div id="login-logs-tab" class="tab-content">
            <h2>üîê Login Logs</h2>
            <div class="log-container">
                <% if (recentLogs.login && recentLogs.login.length > 0) { %>
                    <% recentLogs.login.forEach(log => { %>
                        <% 
                            try {
                                const parsed = JSON.parse(log);
                                %>
                                <div class="log-line">
                                    <span class="log-time"><%= new Date(parsed.timestamp).toLocaleString() %></span>
                                    <%= parsed.message %>
                                </div>
                                <%
                            } catch(e) {
                                %>
                                <div class="log-line"><%= log %></div>
                                <%
                            }
                        %>
                    <% }) %>
                <% } else { %>
                    <div class="log-line">No login logs found</div>
                <% } %>
            </div>
        </div>
        
        <!-- Order Logs Tab -->
        <div id="order-logs-tab" class="tab-content">
            <h2>üìã Order Logs</h2>
            <div class="log-container">
                <% if (recentLogs.orders && recentLogs.orders.length > 0) { %>
                    <% recentLogs.orders.forEach(log => { %>
                        <div class="log-line"><%= log %></div>
                    <% }) %>
                <% } else { %>
                    <div class="log-line">No order logs found</div>
                <% } %>
            </div>
        </div>
        
        <!-- Payment Logs Tab -->
        <div id="payment-logs-tab" class="tab-content">
            <h2>üí∞ Payment Logs</h2>
            <div class="log-container">
                <% if (recentLogs.payments && recentLogs.payments.length > 0) { %>
                    <% recentLogs.payments.forEach(log => { %>
                        <div class="log-line"><%= log %></div>
                    <% }) %>
                <% } else { %>
                    <div class="log-line">No payment logs found</div>
                <% } %>
            </div>
        </div>
        
        <!-- Delivery Logs Tab -->
        <div id="delivery-logs-tab" class="tab-content">
            <h2>üöö Delivery Logs</h2>
            <div class="log-container">
                <% if (recentLogs.deliveries && recentLogs.deliveries.length > 0) { %>
                    <% recentLogs.deliveries.forEach(log => { %>
                        <div class="log-line"><%= log %></div>
                    <% }) %>
                <% } else { %>
                    <div class="log-line">No delivery logs found</div>
                <% } %>
            </div>
        </div>
        
        <!-- Products Tab -->
        <div id="products-tab" class="tab-content">
            <div style="display: flex; justify-content: space-between; margin-bottom: 1rem;">
                <h2>üì¶ Products</h2>
                <a href="/admin/product/new" class="btn primary">+ Add Product</a>
            </div>
            <div style="overflow-x: auto;">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Stock</th>
                            <th>Sold</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(product => { %>
                            <tr>
                                <td><%= product.id %></td>
                                <td>
                                    <% if (product.image) { %>
                                        <img src="/uploads/<%= product.image %>" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;">
                                    <% } else { %>
                                        üì∑
                                    <% } %>
                                </td>
                                <td><%= product.name %></td>
                                <td><%= currency %><%= product.price %></td>
                                <td><%= product.category %></td>
                                <td><%= product.stock %></td>
                                <td><%= product.soldCount || 0 %></td>
                                <td>
                                    <a href="/admin/product/edit/<%= product.id %>" class="btn-small">Edit</a>
                                    <form action="/admin/product/delete/<%= product.id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete this product?')">
                                        <button type="submit" class="btn-small" style="background:rgba(231,76,60,0.2); color:#e74c3c;">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        
        <!-- Users Tab -->
        <div id="users-tab" class="tab-content">
            <h2>üë• Users</h2>
            <div style="overflow-x: auto;">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Orders</th>
                            <th>Joined</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.id %></td>
                                <td><%= user.username %></td>
                                <td><%= user.fullName || 'N/A' %></td>
                                <td><%= user.phone || 'N/A' %></td>
                                <td><%= user.totalOrders || 0 %></td>
                                <td><%= new Date(user.createdAt).toLocaleDateString() %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <!-- Order Update Modal -->
    <div id="orderModal" style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.8); z-index:10000; align-items:center; justify-content:center;">
        <div style="background:linear-gradient(135deg,#1a1a3a,#2a1a4a); padding:2rem; border-radius:20px; max-width:500px; width:90%;">
            <h3 style="margin-bottom:1rem;">Update Order <span id="modalOrderNumber"></span></h3>
            <form id="orderUpdateForm" method="POST">
                <div style="margin-bottom:1rem;">
                    <label>Order Status</label>
                    <select name="orderStatus" style="width:100%; padding:0.8rem; background:rgba(255,255,255,0.1); border:1px solid #9b59b6; border-radius:10px; color:white;">
                        <option value="pending">Pending</option>
                        <option value="processing">Processing</option>
                        <option value="shipped">Shipped</option>
                        <option value="out_for_delivery">Out for Delivery</option>
                        <option value="delivered">Delivered</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                </div>
                <div style="margin-bottom:1rem;">
                    <label>Payment Status</label>
                    <select name="paymentStatus" style="width:100%; padding:0.8rem; background:rgba(255,255,255,0.1); border:1px solid #9b59b6; border-radius:10px; color:white;">
                        <option value="pending">Pending</option>
                        <option value="completed">Completed</option>
                        <option value="failed">Failed</option>
                    </select>
                </div>
                <div style="margin-bottom:1rem;">
                    <label>Tracking ID / UTR</label>
                    <input type="text" name="trackingId" style="width:100%; padding:0.8rem; background:rgba(255,255,255,0.1); border:1px solid #9b59b6; border-radius:10px; color:white;">
                </div>
                <div style="margin-bottom:1rem;">
                    <label>Courier</label>
                    <input type="text" name="courier" style="width:100%; padding:0.8rem; background:rgba(255,255,255,0.1); border:1px solid #9b59b6; border-radius:10px; color:white;">
                </div>
                <div style="margin-bottom:1rem;">
                    <label>Notes</label>
                    <textarea name="notes" rows="3" style="width:100%; padding:0.8rem; background:rgba(255,255,255,0.1); border:1px solid #9b59b6; border-radius:10px; color:white;"></textarea>
                </div>
                <div style="display:flex; gap:1rem;">
                    <button type="submit" class="btn primary" style="flex:1;">Update</button>
                    <button type="button" onclick="closeOrderModal()" class="btn secondary" style="flex:1;">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function showTab(tabName) {
            document.querySelectorAll('.tab-content').forEach(el => el.classList.remove('active'));
            document.querySelectorAll('.tab-btn').forEach(el => el.classList.remove('active'));
            
            document.getElementById(tabName + '-tab').classList.add('active');
            event.target.classList.add('active');
        }
        
        function showOrderModal(orderId, orderNumber, currentStatus, paymentStatus) {
            document.getElementById('orderModal').style.display = 'flex';
            document.getElementById('modalOrderNumber').textContent = orderNumber;
            
            const form = document.getElementById('orderUpdateForm');
            form.action = `/admin/order/update/${orderId}`;
            
            form.orderStatus.value = currentStatus;
            form.paymentStatus.value = paymentStatus;
        }
        
        function closeOrderModal() {
            document.getElementById('orderModal').style.display = 'none';
        }
    </script>
</body>
</html>
