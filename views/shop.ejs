<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop - Moonlit Promise</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="magical-particles"></div>
    
    <nav class="navbar">
        <!-- Same navbar as index.ejs -->
        <div class="nav-container">
            <div class="logo">
                <h1>Moonlit<span>Promise</span></h1>
                <div class="moon-glow"></div>
            </div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/shop" class="active">Shop</a></li>
                <li><a href="/cart">Cart</a></li>
                <li><a href="/history">History</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/terms">Terms</a></li>
                <% if (user && user.id === 'your_admin_id_here') { %>
                    <li><a href="/admin">Admin</a></li>
                <% } %>
            </ul>
            <div class="auth-buttons">
                <% if (user) { %>
                    <div class="user-profile">
                        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar">
                        <span><%= user.username %></span>
                        <a href="/logout" class="logout-btn">Logout</a>
                    </div>
                <% } else { %>
                    <a href="/auth/discord" class="discord-btn">Login with Discord</a>
                <% } %>
            </div>
        </div>
    </nav>

    <main>
        <div class="shop-header">
            <h1>The Moonlit Collection</h1>
            <div class="category-filters">
                <a href="/shop?category=all" class="filter <%= selectedCategory === 'all' ? 'active' : '' %>">All</a>
                <a href="/shop?category=dress" class="filter <%= selectedCategory === 'dress' ? 'active' : '' %>">Dresses</a>
                <a href="/shop?category=wedding" class="filter <%= selectedCategory === 'wedding' ? 'active' : '' %>">Wedding</a>
                <a href="/shop?category=couple" class="filter <%= selectedCategory === 'couple' ? 'active' : '' %>">Couple</a>
                <a href="/shop?category=fantasy" class="filter <%= selectedCategory === 'fantasy' ? 'active' : '' %>">Fantasy</a>
            </div>
        </div>

        <div class="products-grid">
            <% products.forEach(product => { %>
                <div class="product-card">
                    <div class="product-image">
                        <div class="image-placeholder" style="background: linear-gradient(135deg, #6a0dad30, #9b59b630)">
                            <span>✨</span>
                        </div>
                        <div class="product-glow"></div>
                    </div>
                    <div class="product-info">
                        <h3><%= product.name %></h3>
                        <p class="price">$<%= product.price %></p>
                        <p class="description"><%= product.description %></p>
                        <div class="product-actions">
                            <form action="/cart/add/<%= product.id %>" method="POST">
                                <button type="submit" class="btn add-to-cart">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>

    <footer>
        <div class="footer-content">
            <p>Dev Rick • Moonlit Promise</p>
            <p>✨ Where every purchase is a promise under the stars ✨</p>
        </div>
    </footer>
</body>
</html>
