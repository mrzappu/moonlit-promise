    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Terms & Conditions - Moonlit Promise</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .terms-container {
            max-width: 1000px;
            margin: 4rem auto;
            padding: 0 2rem;
        }

        .terms-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .terms-header h1 {
            font-size: 3rem;
            background: linear-gradient(135deg, #fff, #ffd7ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 1rem;
        }

        .terms-header p {
            color: rgba(255, 255, 255, 0.7);
            font-size: 1.1rem;
        }

        .last-updated {
            color: #f1c40f;
            font-size: 0.95rem;
            margin-top: 1rem;
        }

        .terms-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 2rem;
            margin: 3rem 0;
        }

        .term-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 2rem;
            border: 1px solid rgba(155, 89, 182, 0.3);
            transition: transform 0.3s ease;
        }

        .term-card:hover {
            transform: translateY(-5px);
            border-color: #9b59b6;
        }

        .term-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }

        .term-card h2 {
            color: #f1c40f;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .term-card p {
            color: rgba(255, 255, 255, 0.8);
            line-height: 1.8;
        }

        .term-card ul {
            color: rgba(255, 255, 255, 0.8);
            padding-left: 1.5rem;
            line-height: 1.8;
        }

        .term-card li {
            margin-bottom: 0.5rem;
        }

        .highlight-card {
            background: linear-gradient(135deg, rgba(155, 89, 182, 0.2), rgba(142, 68, 173, 0.2));
            border: 2px solid #f1c40f;
        }

        .highlight-card h2 {
            color: #f1c40f;
        }

        .terms-footer {
            text-align: center;
            margin-top: 4rem;
            padding: 3rem;
            background: rgba(155, 89, 182, 0.1);
            border-radius: 20px;
            border: 1px solid rgba(155, 89, 182, 0.3);
        }

        .terms-footer h3 {
            color: #f1c40f;
            font-size: 1.8rem;
            margin-bottom: 1rem;
        }

        .terms-footer p {
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 2rem;
        }

        .accept-btn {
            padding: 1rem 3rem;
            background: linear-gradient(135deg, #9b59b6, #8e44ad);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .accept-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(155, 89, 182, 0.4);
        }

        @media (max-width: 768px) {
            .terms-grid {
                grid-template-columns: 1fr;
            }
            
            .terms-header h1 {
                font-size: 2rem;
            }
        }
    </style>
</head>
