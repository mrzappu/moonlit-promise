<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout - Moonlit Promise</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        .payment-methods {
            display: flex;
            gap: 1rem;
            margin: 2rem 0;
            flex-wrap: wrap;
        }
        
        .payment-method-card {
            flex: 1;
            min-width: 200px;
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(155, 89, 182, 0.3);
            border-radius: 15px;
            padding: 1.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
        }
        
        .payment-method-card:hover {
            transform: translateY(-5px);
            border-color: #9b59b6;
            box-shadow: 0 10px 30px rgba(155, 89, 182, 0.3);
        }
        
        .payment-method-card.selected {
            border-color: #f1c40f;
            background: rgba(241, 196, 15, 0.1);
            box-shadow: 0 0 20px rgba(241, 196, 15, 0.3);
        }
        
        .payment-method-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }
        
        .payment-method-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        
        .payment-method-desc {
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.9rem;
        }
        
        .payment-section {
            display: none;
        }
        
        .payment-section.active {
            display: block;
        }
        
        /* OTP Modal */
        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            backdrop-filter: blur(5px);
            z-index: 10000;
            align-items: center;
            justify-content: center;
        }
        
        .modal.active {
            display: flex;
        }
        
        .modal-content {
            background: linear-gradient(135deg, #1a1a3a, #2a1a4a);
            border-radius: 20px;
            padding: 2rem;
            max-width: 400px;
            width: 90%;
            border: 1px solid rgba(155, 89, 182, 0.5);
            box-shadow: 0 0 50px rgba(155, 89, 182, 0.3);
            position: relative;
        }
        
        .modal-close {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
        }
        
        .otp-input {
            display: flex;
            gap: 0.5rem;
            justify-content: center;
            margin: 2rem 0;
        }
        
        .otp-digit {
            width: 50px;
            height: 50px;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(155, 89, 182, 0.5);
            border-radius: 10px;
            color: white;
            font-size: 1.5rem;
            text-align: center;
            font-weight: 600;
        }
        
        .otp-digit:focus {
            outline: none;
            border-color: #f1c40f;
            box-shadow: 0 0 15px rgba(241, 196, 15, 0.3);
        }
        
        .timer {
            color: #f1c40f;
            font-weight: 600;
        }
        
        .phone-input-group {
            display: flex;
            gap: 0.5rem;
        }
        
        .phone-input-group input {
            flex: 1;
        }
        
        .send-otp-btn {
            background: linear-gradient(135deg, #9b59b6, #8e44ad);
            color: white;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            white-space: nowrap;
        }
        
        .send-otp-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        
        .verify-btn {
            width: 100%;
            margin-top: 1rem;
        }
        
        .message {
            padding: 1rem;
            border-radius: 10px;
            margin: 1rem 0;
            display: none;
        }
        
        .message.success {
            background: rgba(46, 204, 113, 0.2);
            border: 1px solid #2ecc71;
            color: #2ecc71;
            display: block;
        }
        
        .message.error {
            background: rgba(231, 76, 60, 0.2);
            border: 1px solid #e74c3c;
            color: #e74c3c;
            display: block;
        }
        
        .message.info {
            background: rgba(52, 152, 219, 0.2);
            border: 1px solid #3498db;
            color: #3498db;
            display: block;
        }
        
        .cod-form {
            display: none;
        }
        
        .online-form {
            display: none;
        }
    </style>
</head>
<body>
    <div class="magical-particles"></div>
    
    <nav class="navbar">
        <div class="nav-container">
            <div class="logo">
                <img src="/moonlitpromise.png" alt="Moonlit Promise" class="logo-image">
                <div class="moon-glow"></div>
            </div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/shop">Shop</a></li>
                <li><a href="/cart">Cart</a></li>
                <li><a href="/history">History</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/terms">Terms</a></li>
                <% if (isAdmin) { %>
                    <li><a href="/admin">Admin</a></li>
                <% } %>
            </ul>
            <div class="auth-buttons">
                <% if (user) { %>
                    <div class="user-profile">
                        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar">
                        <span><%= user.username %></span>
                        <a href="/logout" class="logout-btn">Logout</a>
                    </div>
                <% } %>
            </div>
        </div>
    </nav>

    <main>
        <div class="checkout-container" style="max-width: 1200px; margin: 4rem auto; padding: 0 2rem;">
            <h1 style="text-align: center; margin-bottom: 3rem;">Complete Your Purchase</h1>
            
            <div class="checkout-grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 3rem;">
                <!-- Order Summary -->
                <div class="order-summary" style="background: rgba(255,255,255,0.05); backdrop-filter: blur(10px); border-radius: 20px; padding: 2rem;">
                    <h2 style="margin-bottom: 1.5rem;">Your Order</h2>
                    <% cartItems.forEach(item => { %>
                        <div style="display: flex; justify-content: space-between; padding: 0.8rem 0; border-bottom: 1px solid rgba(155,89,182,0.2);">
                            <span><%= item.name %></span>
                            <span><%= currency %><%= item.price.toLocaleString('en-IN') %></span>
                        </div>
                    <% }) %>
                    <div style="display: flex; justify-content: space-between; padding: 1rem 0; font-size: 1.3rem; font-weight: 700; color: #f1c40f; border-top: 2px solid #9b59b6; margin-top: 1rem;">
                        <span>Total</span>
                        <span><%= currency %><%= total.toLocaleString('en-IN') %></span>
                    </div>
                </div>

                <!-- Payment Method Selection -->
                <div class="payment-selection">
                    <h2 style="margin-bottom: 1.5rem;">Select Payment Method</h2>
                    
                    <div class="payment-methods">
                        <div class="payment-method-card" onclick="selectPayment('online')" id="online-card">
                            <div class="payment-method-icon">ðŸ’³</div>
                            <div class="payment-method-title">Online Payment</div>
                            <div class="payment-method-desc">Pay via UPI, Card, or NetBanking</div>
                        </div>
                        
                        <div class="payment-method-card" onclick="selectPayment('cod')" id="cod-card">
                            <div class="payment-method-icon">ðŸ’µ</div>
                            <div class="payment-method-title">Cash on Delivery</div>
                            <div class="payment-method-desc">Pay when you receive your order</div>
                        </div>
                    </div>

                    <!-- Online Payment Form -->
                    <div class="payment-section" id="online-section">
                        <form action="/checkout/online-submit" method="POST" enctype="multipart/form-data" class="online-form" style="display: block;">
                            <h3 style="margin: 2rem 0 1rem;">Delivery Information</h3>
                            
                            <div style="margin-bottom: 1rem;">
                                <label style="display: block; margin-bottom: 0.5rem;">Full Name</label>
                                <input type="text" name="fullName" required placeholder="Enter your full name" style="width: 100%; padding: 0.8rem; border-radius: 10px; border: 1px solid rgba(155,89,182,0.3); background: rgba(255,255,255,0.1); color: white;">
                            </div>

                            <div style="margin-bottom: 1rem;">
                                <label style="display: block; margin-bottom: 0.5rem;">Phone Number</label>
                                <input type="tel" name="phone" required placeholder="10-digit mobile number" pattern="[6-9][0-9]{9}" style="width: 100%; padding: 0.8rem; border-radius: 10px; border: 1px solid rgba(155,89,182,0.3); background: rgba(255,255,255,0.1); color: white;">
                                <small style="color: rgba(255,255,255,0.5);">Enter 10-digit Indian mobile number</small>
                            </div>

                            <div style="margin-bottom: 1rem;">
                                <label style="display: block; margin-bottom: 0.5rem;">Pincode</label>
                                <input type="text" name="pincode" required placeholder="6-digit pincode" pattern="[0-9]{6}" style="width: 100%; padding: 0.8rem; border-radius: 10px; border: 1px solid rgba(155,89,182,0.3); background: rgba(255,255,255,0.1); color: white;">
                            </div>

                            <div style="margin-bottom: 1rem;">
                                <label style="display: block; margin-bottom: 0.5rem;">Complete Address</label>
                                <textarea name="address" required placeholder="Enter your full address with house/flat no., street, area, landmark" rows="3" style="width: 100%; padding: 0.8rem; border-radius: 10px; border: 1px solid rgba(155,89,182,0.3); background: rgba(255,255,255,0.1); color: white;"></textarea>
                            </div>

                            <div style="margin-bottom: 2rem;">
                                <label style="display: block; margin-bottom: 0.5rem;">Payment Screenshot</label>
                                <input type="file" name="proof" accept=".png,.jpg,.jpeg" required style="width: 100%; padding: 0.8rem; border-radius: 10px; border: 1px solid rgba(155,89,182,0.3); background: rgba(255,255,255,0.1); color: white;">
                                <p style="color: rgba(255,255,255,0.5); font-size: 0.8rem; margin-top: 0.3rem;">Upload screenshot of your payment (PNG, JPG, JPEG)</p>
                            </div>

                            <div class="qr-section" style="text-align: center; margin-bottom: 2rem;">
                                <h4>Scan QR to Pay</h4>
                                <img src="<%= qrImage %>" alt="Payment QR" style="max-width: 200px; border-radius: 15px; margin: 1rem auto;">
                                <p style="color: #f1c40f;">UPI ID: payments@moonlitpromise</p>
                            </div>

                            <button type="submit" class="btn primary" style="width: 100%;">Place Order (Online)</button>
                        </form>
                    </div>

                    <!-- COD Payment Form -->
                    <div class="payment-section" id="cod-section">
                        <div class="cod-form" style="display: block;">
                            <h3 style="margin: 2rem 0 1rem;">Cash on Delivery</h3>
                            
                            <div style="background: rgba(241, 196, 15, 0.1); border: 1px solid #f1c40f; border-radius: 10px; padding: 1rem; margin-bottom: 2rem;">
                                <p style="color: #f1c40f;"><strong>Note:</strong> You need to verify your phone number via OTP for Cash on Delivery orders.</p>
                            </div>
                            
                            <div style="margin-bottom: 1rem;">
                                <label style="display: block; margin-bottom: 0.5rem;">Full Name</label>
                                <input type="text" id="cod-fullname" required placeholder="Enter your full name" style="width: 100%; padding: 0.8rem; border-radius: 10px; border: 1px solid rgba(155,89,182,0.3); background: rgba(255,255,255,0.1); color: white;">
                            </div>

                            <div style="margin-bottom: 1rem;">
                                <label style="display: block; margin-bottom: 0.5rem;">Phone Number</label>
                                <div class="phone-input-group">
                                    <span style="background: rgba(155,89,182,0.3); padding: 0.8rem; border-radius: 10px 0 0 10px; border: 1px solid rgba(155,89,182,0.3); border-right: none;">+91</span>
                                    <input type="tel" id="cod-phone" required placeholder="9876543210" pattern="[6-9][0-9]{9}" style="flex: 1; padding: 0.8rem; border-radius: 0 10px 10px 0; border: 1px solid rgba(155,89,182,0.3); background: rgba(255,255,255,0.1); color: white;">
                                    <button type="button" class="send-otp-btn" onclick="sendOTP()" id="sendOtpBtn">Send OTP</button>
                                </div>
                                <div id="phoneMessage" class="message"></div>
                            </div>

                            <div style="margin-bottom: 1rem;">
                                <label style="display: block; margin-bottom: 0.5rem;">Pincode</label>
                                <input type="text" id="cod-pincode" required placeholder="6-digit pincode" pattern="[0-9]{6}" style="width: 100%; padding: 0.8rem; border-radius: 10px; border: 1px solid rgba(155,89,182,0.3); background: rgba(255,255,255,0.1); color: white;">
                            </div>

                            <div style="margin-bottom: 1rem;">
                                <label style="display: block; margin-bottom: 0.5rem;">Complete Address</label>
                                <textarea id="cod-address" required placeholder="Enter your full address with house/flat no., street, area, landmark" rows="3" style="width: 100%; padding: 0.8rem; border-radius: 10px; border: 1px solid rgba(155,89,182,0.3); background: rgba(255,255,255,0.1); color: white;"></textarea>
                            </div>

                            <button type="button" class="btn primary" onclick="proceedToCOD()" id="codSubmitBtn" disabled style="width: 100%; opacity: 0.5;">Verify Phone First</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- OTP Verification Modal -->
        <div class="modal" id="otpModal">
            <div class="modal-content">
                <button class="modal-close" onclick="closeOTPModal()">&times;</button>
                <h2 style="text-align: center; margin-bottom: 1rem;">ðŸ“± Verify Your Phone</h2>
                <p style="text-align: center; color: rgba(255,255,255,0.7); margin-bottom: 2rem;">Enter the 6-digit OTP sent to <span id="displayPhone">+91 XXXXX</span></p>
                
                <div class="otp-input">
                    <input type="text" class="otp-digit" maxlength="1" onkeyup="moveToNext(this, 1)" id="otp1">
                    <input type="text" class="otp-digit" maxlength="1" onkeyup="moveToNext(this, 2)" id="otp2">
                    <input type="text" class="otp-digit" maxlength="1" onkeyup="moveToNext(this, 3)" id="otp3">
                    <input type="text" class="otp-digit" maxlength="1" onkeyup="moveToNext(this, 4)" id="otp4">
                    <input type="text" class="otp-digit" maxlength="1" onkeyup="moveToNext(this, 5)" id="otp5">
                    <input type="text" class="otp-digit" maxlength="1" onkeyup="moveToNext(this, 6)" id="otp6">
                </div>

                <div id="otpMessage" class="message"></div>

                <p style="text-align: center; margin: 1rem 0;">
                    <span class="timer" id="timer">05:00</span> remaining
                </p>

                <button class="btn primary verify-btn" onclick="verifyOTP()" id="verifyBtn">Verify OTP</button>
                
                <p style="text-align: center; margin-top: 1rem;">
                    Didn't receive OTP? 
                    <a href="#" onclick="resendOTP()" style="color: #f1c40f; text-decoration: none;">Resend</a>
                </p>
            </div>
        </div>
    </main>

    <footer>
        <div class="footer-content">
            <p>Dev Rick â€¢ Moonlit Promise</p>
            <p>âœ¨ Where every purchase is a promise under the stars âœ¨</p>
        </div>
    </footer>

    <script>
        let selectedPayment = null;
        let currentPhone = '';
        let otpTimer = null;
        let timeLeft = 300; // 5 minutes in seconds
        let isOtpVerified = false;
        
        function selectPayment(method) {
            selectedPayment = method;
            
            // Update card styles
            document.getElementById('online-card').classList.remove('selected');
            document.getElementById('cod-card').classList.remove('selected');
            document.getElementById(`${method}-card`).classList.add('selected');
            
            // Show appropriate section
            document.getElementById('online-section').classList.remove('active');
            document.getElementById('cod-section').classList.remove('active');
            document.getElementById(`${method}-section`).classList.add('active');
        }
        
        async function sendOTP() {
            const phone = document.getElementById('cod-phone').value;
            const phoneMessage = document.getElementById('phoneMessage');
            
            // Validate phone
            if (!/^[6-9]\d{9}$/.test(phone)) {
                phoneMessage.className = 'message error';
                phoneMessage.textContent = 'Please enter a valid 10-digit Indian mobile number';
                return;
            }
            
            // Disable button
            document.getElementById('sendOtpBtn').disabled = true;
            document.getElementById('sendOtpBtn').textContent = 'Sending...';
            
            try {
                const response = await fetch('/api/send-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ phone })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    currentPhone = phone;
                    document.getElementById('displayPhone').textContent = '+91 ' + phone.slice(0,5) + 'XXXXX';
                    
                    phoneMessage.className = 'message success';
                    phoneMessage.textContent = 'OTP sent successfully!';
                    
                    // Show OTP modal
                    document.getElementById('otpModal').classList.add('active');
                    
                    // Start timer
                    startTimer(300);
                    
                    // Clear OTP inputs
                    for (let i = 1; i <= 6; i++) {
                        document.getElementById(`otp${i}`).value = '';
                    }
                    document.getElementById('otp1').focus();
                } else {
                    phoneMessage.className = 'message error';
                    phoneMessage.textContent = data.message || 'Failed to send OTP';
                    document.getElementById('sendOtpBtn').disabled = false;
                    document.getElementById('sendOtpBtn').textContent = 'Send OTP';
                }
            } catch (error) {
                phoneMessage.className = 'message error';
                phoneMessage.textContent = 'Network error. Please try again.';
                document.getElementById('sendOtpBtn').disabled = false;
                document.getElementById('sendOtpBtn').textContent = 'Send OTP';
            }
        }
        
        function moveToNext(current, nextId) {
            if (current.value.length === 1) {
                if (nextId <= 6) {
                    document.getElementById(`otp${nextId}`).focus();
                } else {
                    document.getElementById(`otp${nextId-1}`).blur();
                }
            }
            
            // Auto-submit if all filled
            let allFilled = true;
            for (let i = 1; i <= 6; i++) {
                if (!document.getElementById(`otp${i}`).value) {
                    allFilled = false;
                    break;
                }
            }
            if (allFilled) {
                verifyOTP();
            }
        }
        
        async function verifyOTP() {
            // Get OTP
            let otp = '';
            for (let i = 1; i <= 6; i++) {
                otp += document.getElementById(`otp${i}`).value;
            }
            
            if (otp.length !== 6) {
                document.getElementById('otpMessage').className = 'message error';
                document.getElementById('otpMessage').textContent = 'Please enter complete 6-digit OTP';
                return;
            }
            
            document.getElementById('verifyBtn').disabled = true;
            document.getElementById('verifyBtn').textContent = 'Verifying...';
            
            try {
                const response = await fetch('/api/verify-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ phone: currentPhone, otp })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    document.getElementById('otpMessage').className = 'message success';
                    document.getElementById('otpMessage').textContent = 'Phone verified successfully!';
                    
                    isOtpVerified = true;
                    
                    // Enable COD submit button
                    document.getElementById('codSubmitBtn').disabled = false;
                    document.getElementById('codSubmitBtn').style.opacity = '1';
                    document.getElementById('codSubmitBtn').textContent = 'Place COD Order';
                    
                    // Close modal after 2 seconds
                    setTimeout(() => {
                        closeOTPModal();
                    }, 2000);
                } else {
                    document.getElementById('otpMessage').className = 'message error';
                    document.getElementById('otpMessage').textContent = data.message || 'Invalid OTP';
                    document.getElementById('verifyBtn').disabled = false;
                    document.getElementById('verifyBtn').textContent = 'Verify OTP';
                }
            } catch (error) {
                document.getElementById('otpMessage').className = 'message error';
                document.getElementById('otpMessage').textContent = 'Verification failed';
                document.getElementById('verifyBtn').disabled = false;
                document.getElementById('verifyBtn').textContent = 'Verify OTP';
            }
        }
        
        function resendOTP() {
            if (otpTimer) clearInterval(otpTimer);
            document.getElementById('otpModal').classList.remove('active');
            document.getElementById('sendOtpBtn').disabled = false;
            document.getElementById('sendOtpBtn').textContent = 'Send OTP';
            sendOTP();
        }
        
        function startTimer(seconds) {
            timeLeft = seconds;
            updateTimer();
            
            if (otpTimer) clearInterval(otpTimer);
            
            otpTimer = setInterval(() => {
                timeLeft--;
                updateTimer();
                
                if (timeLeft <= 0) {
                    clearInterval(otpTimer);
                    document.getElementById('timer').textContent = 'Expired';
                    document.getElementById('verifyBtn').disabled = true;
                }
            }, 1000);
        }
        
        function updateTimer() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            document.getElementById('timer').textContent = 
                `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }
        
        function closeOTPModal() {
            document.getElementById('otpModal').classList.remove('active');
            if (otpTimer) clearInterval(otpTimer);
        }
        
        function proceedToCOD() {
            if (!isOtpVerified) {
                alert('Please verify your phone number first');
                return;
            }
            
            const fullName = document.getElementById('cod-fullname').value;
            const pincode = document.getElementById('cod-pincode').value;
            const address = document.getElementById('cod-address').value;
            
            if (!fullName || !pincode || !address) {
                alert('Please fill all fields');
                return;
            }
            
            if (!/^[0-9]{6}$/.test(pincode)) {
                alert('Please enter a valid 6-digit pincode');
                return;
            }
            
            // Create form and submit
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '/checkout/cod-submit';
            
            const fields = {
                fullName, pincode, address
            };
            
            for (const [key, value] of Object.entries(fields)) {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = key;
                input.value = value;
                form.appendChild(input);
            }
            
            document.body.appendChild(form);
            form.submit();
        }
    </script>
</body>
</html>
