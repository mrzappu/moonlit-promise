                                <input type="file" name="proof" accept=".png,.jpg,.jpeg" required>
                                <p style="color: rgba(255,255,255,0.5); font-size: 0.8rem; margin-top: 0.3rem;">Upload screenshot after payment</p>
                            </div>
                            
                            <button type="submit" class="submit-btn">
                                Place Order (Online)
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- OTP Verification Modal -->
    <div class="otp-modal" id="otpModal">
        <div class="otp-modal-content">
            <h2 style="text-align: center; margin-bottom: 1rem;">ðŸ“± Verify Phone</h2>
            <p style="text-align: center; color: rgba(255,255,255,0.7); margin-bottom: 2rem;">
                Enter the 6-digit OTP sent to <span id="displayPhone">+91 XXXXX</span>
            </p>
            
            <div class="otp-inputs">
                <input type="text" class="otp-digit" maxlength="1" onkeyup="moveToNext(this, 1)" id="otp1">
                <input type="text" class="otp-digit" maxlength="1" onkeyup="moveToNext(this, 2)" id="otp2">
                <input type="text" class="otp-digit" maxlength="1" onkeyup="moveToNext(this, 3)" id="otp3">
                <input type="text" class="otp-digit" maxlength="1" onkeyup="moveToNext(this, 4)" id="otp4">
                <input type="text" class="otp-digit" maxlength="1" onkeyup="moveToNext(this, 5)" id="otp5">
                <input type="text" class="otp-digit" maxlength="1" onkeyup="moveToNext(this, 6)" id="otp6">
            </div>
            
            <div id="modalOtpMessage" class="otp-message"></div>
            
            <p style="text-align: center; margin: 1rem 0;" id="timer">05:00</p>
            
            <button class="submit-btn" onclick="verifyOTP()" id="verifyOtpBtn">Verify OTP</button>
            
            <p style="text-align: center; margin-top: 1rem;">
                Didn't receive OTP? 
                <a href="#" onclick="resendOTP()" style="color: #f1c40f; text-decoration: none;">Resend</a>
            </p>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer" style="background: #0a0a0f; padding: 2rem 0; margin-top: 4rem; border-top: 1px solid rgba(155,89,182,0.3);">
        <div class="container">
            <div style="text-align: center; color: rgba(255,255,255,0.5);">
                <p>Â© 2025 Moonlit Promise. Secure Checkout â€¢ All transactions are encrypted</p>
            </div>
        </div>
    </footer>

    <script>
        let selectedPayment = 'cod';
        let currentPhone = '';
        let otpTimer = null;
        let timeLeft = 300;
        let isOtpVerified = false;
        
        // Select payment method
        function selectPayment(method) {
            selectedPayment = method;
            
            // Update card styles
            document.getElementById('cod-card').classList.remove('selected');
            document.getElementById('online-card').classList.remove('selected');
            document.getElementById(method + '-card').classList.add('selected');
            
            // Show appropriate form
            document.getElementById('cod-form').classList.remove('active');
            document.getElementById('online-form').classList.remove('active');
            document.getElementById(method + '-form').classList.add('active');
        }
        
        // Send OTP
        async function sendOTP() {
            const phone = document.getElementById('otp-phone').value;
            const statusDiv = document.getElementById('otp-status');
            
            // Validate Indian phone number
            if (!/^[6-9]\d{9}$/.test(phone)) {
                statusDiv.className = 'otp-message error';
                statusDiv.textContent = 'Please enter a valid 10-digit Indian mobile number';
                return;
            }
            
            // Disable button
            document.getElementById('sendOtpBtn').disabled = true;
            document.getElementById('sendOtpBtn').innerHTML = '<span class="spinner"></span> Sending...';
            
            try {
                const response = await fetch('/api/send-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ phone })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    currentPhone = phone;
                    document.getElementById('displayPhone').textContent = '+91 ' + phone.slice(0,5) + 'XXXXX';
                    
                    statusDiv.className = 'otp-message success';
                    statusDiv.textContent = 'OTP sent successfully!';
                    
                    // Show OTP modal
                    document.getElementById('otpModal').classList.add('active');
                    
                    // Start timer
                    startTimer(300);
                    
                    // Clear OTP inputs
                    for (let i = 1; i <= 6; i++) {
                        document.getElementById(`otp${i}`).value = '';
                    }
                    document.getElementById('otp1').focus();
                } else {
                    statusDiv.className = 'otp-message error';
                    statusDiv.textContent = data.message || 'Failed to send OTP';
                    document.getElementById('sendOtpBtn').disabled = false;
                    document.getElementById('sendOtpBtn').textContent = 'Send OTP';
                }
            } catch (error) {
                statusDiv.className = 'otp-message error';
                statusDiv.textContent = 'Network error. Please try again.';
                document.getElementById('sendOtpBtn').disabled = false;
                document.getElementById('sendOtpBtn').textContent = 'Send OTP';
            }
        }
        
        // Move to next OTP input
        function moveToNext(current, nextId) {
            if (current.value.length === 1 && nextId <= 6) {
                document.getElementById(`otp${nextId}`).focus();
            }
            
            // Auto-submit if all filled
            let allFilled = true;
            for (let i = 1; i <= 6; i++) {
                if (!document.getElementById(`otp${i}`).value) {
                    allFilled = false;
                    break;
                }
            }
            if (allFilled) {
                verifyOTP();
            }
        }
        
        // Verify OTP
        async function verifyOTP() {
            let otp = '';
            for (let i = 1; i <= 6; i++) {
                otp += document.getElementById(`otp${i}`).value;
            }
            
            if (otp.length !== 6) {
                document.getElementById('modalOtpMessage').className = 'otp-message error';
                document.getElementById('modalOtpMessage').textContent = 'Please enter complete 6-digit OTP';
                return;
            }
            
            document.getElementById('verifyOtpBtn').disabled = true;
            document.getElementById('verifyOtpBtn').innerHTML = '<span class="spinner"></span> Verifying...';
            
            try {
                const response = await fetch('/api/verify-otp', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ phone: currentPhone, otp })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    document.getElementById('modalOtpMessage').className = 'otp-message success';
                    document.getElementById('modalOtpMessage').textContent = 'Phone verified successfully!';
                    
                    isOtpVerified = true;
                    
                    // Enable COD submit button
                    document.getElementById('cod-submit-btn').disabled = false;
                    document.getElementById('cod-submit-btn').style.opacity = '1';
                    
                    // Update phone field in form
                    document.getElementById('cod-phone').value = currentPhone;
                    
                    // Close modal after 2 seconds
                    setTimeout(() => {
                        document.getElementById('otpModal').classList.remove('active');
                        if (otpTimer) clearInterval(otpTimer);
                    }, 2000);
                } else {
                    document.getElementById('modalOtpMessage').className = 'otp-message error';
                    document.getElementById('modalOtpMessage').textContent = data.message || 'Invalid OTP';
                    document.getElementById('verifyOtpBtn').disabled = false;
                    document.getElementById('verifyOtpBtn').textContent = 'Verify OTP';
                }
            } catch (error) {
                document.getElementById('modalOtpMessage').className = 'otp-message error';
                document.getElementById('modalOtpMessage').textContent = 'Verification failed';
                document.getElementById('verifyOtpBtn').disabled = false;
                document.getElementById('verifyOtpBtn').textContent = 'Verify OTP';
            }
        }
        
        // Resend OTP
        function resendOTP() {
            if (otpTimer) clearInterval(otpTimer);
            document.getElementById('otpModal').classList.remove('active');
            document.getElementById('sendOtpBtn').disabled = false;
            document.getElementById('sendOtpBtn').textContent = 'Send OTP';
            sendOTP();
        }
        
        // Start timer
        function startTimer(seconds) {
            timeLeft = seconds;
            updateTimer();
            
            if (otpTimer) clearInterval(otpTimer);
            
            otpTimer = setInterval(() => {
                timeLeft--;
                updateTimer();
                
                if (timeLeft <= 0) {
                    clearInterval(otpTimer);
                    document.getElementById('timer').textContent = 'OTP Expired';
                    document.getElementById('verifyOtpBtn').disabled = true;
                }
            }, 1000);
        }
        
        // Update timer display
        function updateTimer() {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            document.getElementById('timer').textContent = 
                `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }
        
        // Verify and submit COD order
        function verifyAndSubmitCOD() {
            if (!isOtpVerified) {
                alert('Please verify your phone number first');
                return;
            }
            
            // Validate all fields
            const form = document.getElementById('cod-order-form');
            const inputs = form.querySelectorAll('input[required], textarea[required]');
            let isValid = true;
            
            inputs.forEach(input => {
                if (!input.value) {
                    input.style.borderColor = '#e74c3c';
                    isValid = false;
                } else {
                    input.style.borderColor = '#9b59b6';
                }
            });
            
            if (!isValid) {
                alert('Please fill all required fields');
                return;
            }
            
            // Submit form
            form.submit();
        }
        
        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            // Pre-select COD
            selectPayment('cod');
            
            // Add floating particles
            const particles = document.querySelector('.magical-particles');
            for (let i = 0; i < 20; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 5 + 's';
                particle.style.width = (Math.random() * 4 + 1) + 'px';
                particle.style.height = particle.style.width;
                particles.appendChild(particle);
            }
        });
    </script>
</body>
