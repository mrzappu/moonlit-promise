    <main>
        <div class="checkout-container">
            <h1><i class="fas fa-lock"></i> Secure Checkout</h1>
            
            <div class="checkout-grid">
                <!-- Order Summary -->
                <div class="order-summary">
                    <h3 class="summary-title">Order Summary</h3>
                    
                    <div class="order-items">
                        <% cartItems.forEach(item => { %>
                            <div class="order-item">
                                <div class="item-info">
                                    <div class="item-image">
                                        <% if (item.image) { %>
                                            <img src="/uploads/<%= item.image %>" alt="<%= item.name %>">
                                        <% } else { %>
                                            <span>âœ¨</span>
                                        <% } %>
                                    </div>
                                    <div class="item-details">
                                        <h4><%= item.name %></h4>
                                        <p>Qty: <%= item.quantity %></p>
                                    </div>
                                </div>
                                <div class="item-price">
                                    <%= currency %><%= (item.price * item.quantity).toLocaleString('en-IN') %>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    
                    <div class="summary-row">
                        <span>Subtotal:</span>
                        <span><%= currency %><%= total.toLocaleString('en-IN') %></span>
                    </div>
                    
                    <div class="summary-row">
                        <span>Shipping:</span>
                        <span><%= total >= 999 ? 'FREE' : currency + '99' %></span>
                    </div>
                    
                    <% const shippingCost = total >= 999 ? 0 : 99; %>
                    <% const finalTotal = total + shippingCost; %>
                    
                    <div class="summary-row total">
                        <span>Total:</span>
                        <span><%= currency %><%= finalTotal.toLocaleString('en-IN') %></span>
                    </div>
                </div>

                <!-- Payment Section -->
                <div class="payment-section">
                    <h3 class="summary-title">Payment Method</h3>
                    
                    <div class="payment-methods">
                        <!-- COD Option -->
                        <div class="payment-method-card" onclick="selectPayment('cod')" id="cod-card">
                            <div class="payment-icon">ðŸ’µ</div>
                            <div class="payment-title">Cash on Delivery</div>
                            <div class="payment-desc">Pay when you receive</div>
                        </div>
                        
                        <!-- Online Payment Option -->
                        <div class="payment-method-card" onclick="selectPayment('online')" id="online-card">
                            <div class="payment-icon">ðŸ’³</div>
                            <div class="payment-title">Online Payment</div>
                            <div class="payment-desc">UPI, Card, NetBanking</div>
                        </div>
                    </div>

                    <!-- COD Form -->
                    <div class="payment-form" id="cod-form">
                        <form action="/checkout/place-order" method="POST" id="cod-order-form">
                            <input type="hidden" name="paymentMethod" value="cod">
                            
                            <div class="form-group">
                                <label>Full Name *</label>
                                <input type="text" name="fullName" value="<%= userInfo ? userInfo.fullName || '' : '' %>" required placeholder="Enter your full name">
                            </div>
                            
                            <div class="form-row">
                                <div class="form-group">
                                    <label>Phone Number *</label>
                                    <input type="tel" name="phone" id="cod-phone" value="<%= userInfo ? userInfo.phone || '' : '' %>" required placeholder="10-digit mobile number" pattern="[6-9][0-9]{9}">
                                </div>
                                
                                <div class="form-group">
                                    <label>Pincode *</label>
                                    <input type="text" name="pincode" value="<%= userInfo ? userInfo.pincode || '' : '' %>" required placeholder="6-digit pincode" pattern="[0-9]{6}">
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <label>Complete Address *</label>
                                <textarea name="address" rows="3" required placeholder="House/Flat No., Street, Area, Landmark"><%= userInfo ? userInfo.address || '' : '' %></textarea>
                            </div>
                            
                            <!-- OTP Verification Section -->
                            <div class="otp-section">
                                <h4 style="color: #f1c40f; margin-bottom: 1rem;">ðŸ“± Phone Verification</h4>
                                <p style="color: rgba(255,255,255,0.7); margin-bottom: 1rem;">We'll send a 6-digit OTP to verify your number</p>
                                
                                <div class="otp-input-group">
                                    <input type="tel" id="otp-phone" placeholder="Enter phone number" value="<%= userInfo ? userInfo.phone || '' : '' %>">
                                    <button type="button" class="send-otp-btn" onclick="sendOTP()" id="sendOtpBtn">Send OTP</button>
                                </div>
                                
                                <div id="otp-status" class="otp-message"></div>
                                <div id="otp-timer" class="otp-timer"></div>
                            </div>
                            
                            <button type="button" class="submit-btn" onclick="verifyAndSubmitCOD()" id="cod-submit-btn" disabled>
                                Place Order (COD)
                            </button>
                        </form>
                    </div>

                    <!-- Online Payment Form -->
