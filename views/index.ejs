<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moonlit Promise - Premium Sports & Fashion</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700;900&family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="magical-particles"></div>
    
    <!-- Top Bar -->
    <div class="top-bar">
        <div class="container">
            <i class="fas fa-truck"></i> FREE SHIPPING on all orders above ‚Çπ999 | All India Delivery
        </div>
    </div>
    
    <!-- Navbar -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="logo">
                <img src="/moonlitpromise.png" alt="Moonlit Promise">
            </div>
            <ul class="nav-links">
                <li><a href="/" class="active">Home</a></li>
                <li><a href="/shop">Shop</a></li>
                <li><a href="/cart">Cart</a></li>
                <li><a href="/history">History</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/terms">Terms</a></li>
                <% if (isAdmin) { %>
                    <li><a href="/admin">Admin</a></li>
                <% } %>
            </ul>
            <div class="auth-buttons">
                <% if (user) { %>
                    <div class="user-profile">
                        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar">
                        <span><%= user.username %></span>
                        <a href="/logout" class="logout-btn">Logout</a>
                    </div>
                <% } else { %>
                    <a href="/auth/discord" class="discord-btn">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 127.14 96.36">
                            <path fill="#fff" d="M107.7,8.07A105.15,105.15,0,0,0,81.47,0a72.06,72.06,0,0,0-3.36,6.83A97.68,97.68,0,0,0,49,6.83,72.37,72.37,0,0,0,45.64,0,105.89,105.89,0,0,0,19.39,8.09C2.79,32.65-1.71,56.6.54,80.21h0A105.73,105.73,0,0,0,32.71,96.36,77.7,77.7,0,0,0,39.6,85.25a68.42,68.42,0,0,1-10.85-5.18c.91-.66,1.8-1.34,2.66-2a75.57,75.57,0,0,0,64.32,0c.87.71,1.76,1.39,2.66,2a68.68,68.68,0,0,1-10.87,5.19,77,77,0,0,0,6.89,11.1A105.25,105.25,0,0,0,126.6,80.22h0C129.24,53.84,122.09,29.11,107.7,8.07ZM42.45,65.69C36.18,65.69,31,60,31,53s5-12.74,11.43-12.74S54,46,53.89,53,48.84,65.69,42.45,65.69Zm42.24,0C78.41,65.69,73.25,60,73.25,53s5-12.74,11.44-12.74S96.23,46,96.12,53,91.08,65.69,84.69,65.69Z"/>
                        </svg>
                        Login with Discord
                    </a>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Revolution Slider (DM3 Style) -->
    <div class="rev-slider-container">
        <!-- Slide 1 -->
        <div class="rev-slide" style="background-image: url('/slider/slide1.jpg');">
            <div class="slide-overlay"></div>
            <div class="slide-content">
                <h1 class="slide-title">MOONLIT<br>PROMISE</h1>
                <p class="slide-subtitle">Where dreams meet performance under the silver glow</p>
                <a href="/shop" class="slide-btn">Shop Now</a>
            </div>
        </div>
    </div>

    <!-- OUR POPULAR CATEGORIES Section (DM3 Style) -->
    <section class="categories-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">OUR POPULAR CATEGORIES</h2>
                <p class="section-subtitle">Explore our premium collections</p>
            </div>
            
            <div class="categories-grid">
                <% categories.slice(0, 12).forEach(cat => { %>
                    <a href="/category/<%= cat.slug %>" class="category-card">
                        <div class="category-image">
                            <div class="emoji-icon"><%= cat.icon %></div>
                            <div class="category-glow"></div>
                        </div>
                        <h3 class="category-name"><%= cat.name %></h3>
                    </a>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Promo Banners -->
    <section class="promo-section">
        <div class="container">
            <div class="promo-grid">
                <div class="promo-card">
                    <div class="promo-icon">üèÜ</div>
                    <h3>Premium Quality</h3>
                    <p>Handcrafted with premium materials for lasting comfort</p>
                </div>
                <div class="promo-card">
                    <div class="promo-icon">üöö</div>
                    <h3>Free Shipping</h3>
                    <p>Free delivery on all orders across India</p>
                </div>
                <div class="promo-card">
                    <div class="promo-icon">üíé</div>
                    <h3>Custom Design</h3>
                    <p>Personalize your jersey with custom printing</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Products -->
    <section class="products-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">FEATURED COLLECTION</h2>
                <p class="section-subtitle">Most popular items this month</p>
            </div>
            
            <div class="products-grid">
                <% products.forEach(product => { %>
                    <div class="product-card">
                        <% if (product.stock < 5) { %>
                            <div class="product-badge">Low Stock</div>
                        <% } %>
                        <div class="product-image">
                            <% if (product.image) { %>
                                <img src="/uploads/<%= product.image %>" alt="<%= product.name %>">
                            <% } else { %>
                                <div style="height: 200px; background: linear-gradient(135deg, #9b59b6, #8e44ad); display: flex; align-items: center; justify-content: center; font-size: 3rem;">
                                    ‚ú®
                                </div>
                            <% } %>
                        </div>
                        <div class="product-info">
                            <h3><%= product.name %></h3>
                            <p class="price"><%= currency %><%= product.price.toLocaleString('en-IN') %></p>
                            <p class="description"><%= product.description.substring(0, 60) %>...</p>
                            <form action="/cart/add/<%= product.id %>" method="POST">
                                <button type="submit" class="add-to-cart-btn">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer style="background: #0a0a0f; padding: 3rem 0; border-top: 1px solid rgba(155,89,182,0.3);">
        <div class="container">
            <div style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 2rem;">
                <div>
                    <img src="/moonlitpromise.png" alt="Moonlit Promise" style="height: 40px; margin-bottom: 1rem;">
                    <p style="color: rgba(255,255,255,0.7);">Premium sports wear and fantasy dresses for every occasion.</p>
                </div>
                <div>
                    <h4 style="color: #f1c40f; margin-bottom: 1rem;">Quick Links</h4>
                    <ul style="list-style: none;">
                        <li><a href="/about" style="color: rgba(255,255,255,0.7); text-decoration: none; line-height: 2;">About Us</a></li>
                        <li><a href="/terms" style="color: rgba(255,255,255,0.7); text-decoration: none; line-height: 2;">Terms & Conditions</a></li>
                        <li><a href="/privacy" style="color: rgba(255,255,255,0.7); text-decoration: none; line-height: 2;">Privacy Policy</a></li>
                        <li><a href="/contact" style="color: rgba(255,255,255,0.7); text-decoration: none; line-height: 2;">Contact Us</a></li>
                    </ul>
                </div>
                <div>
                    <h4 style="color: #f1c40f; margin-bottom: 1rem;">Contact Info</h4>
                    <p style="color: rgba(255,255,255,0.7);"><i class="fas fa-map-marker-alt"></i> All India Delivery</p>
                    <p style="color: rgba(255,255,255,0.7);"><i class="fas fa-envelope"></i> support@moonlitpromise.com</p>
                    <p style="color: rgba(255,255,255,0.7);"><i class="fas fa-phone"></i> +91 9876543210</p>
                </div>
            </div>
            <div style="text-align: center; margin-top: 3rem; padding-top: 2rem; border-top: 1px solid rgba(255,255,255,0.1); color: rgba(255,255,255,0.5);">
                <p>¬© 2025 Moonlit Promise. All rights reserved. Designed by Dev Rick</p>
            </div>
        </div>
    </footer>

    <script>
        // Particle effect
        document.addEventListener('DOMContentLoaded', () => {
            const particles = document.querySelector('.magical-particles');
            for (let i = 0; i < 30; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 5 + 's';
                particle.style.width = (Math.random() * 6 + 2) + 'px';
                particle.style.height = particle.style.width;
                particles.appendChild(particle);
            }
        });
    </script>
</body>
</html>
